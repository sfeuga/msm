- flash.each do |name, message|
  - if message.is_a?(String)
    %div{ class: "alert alert-#{name.to_s == 'notice' ? 'success' : 'danger'} fade show", role: 'alert' }
      %button.close{ 'aria-hidden' => 'true',
                      'aria-label' => 'Close',
                      'data-dismiss' => 'alert',
                      :type => 'button' } &times;
      = content_tag(:div, message, id: "flash_#{name}")
