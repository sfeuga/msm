%h1 Listing instruments

%table
  %thead
    %tr
      %th Title
      %th Description
      %th
      %th
      %th

  %tbody
    - @instruments.each do |instrument|
      %tr
        %td= instrument.title
        %td= instrument.description
        %td= link_to 'Show', instrument
        %td= link_to 'Edit', edit_instrument_path(instrument)
        %td= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Instrument', new_instrument_path
